{
	"name": "@artsnlabs/xci",
	"version": "0.2.0",
	"description": "Local GitHub Actions runner UX powered by act.",
	"license": "MIT",
	"author": "Moe Haje <hello@moee.dev> (https://moee.dev)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/moehaje/xci.git"
	},
	"bugs": {
		"url": "https://github.com/moehaje/xci/issues"
	},
	"homepage": "https://github.com/moehaje/xci#readme",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"engines": {
		"node": ">=18"
	},
	"keywords": [
		"github-actions",
		"ci",
		"act",
		"cli",
		"tui"
	],
	"bin": {
		"xci": "dist/index.js"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"files": [
		"dist",
		"src",
		"README.md",
		"LICENSE",
		"CHANGELOG.md",
		"CODE_OF_CONDUCT.md",
		"SECURITY.md",
		"VERSIONING.md"
	],
	"scripts": {
		"clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\"",
		"build": "npm run clean && tsc -p tsconfig.json && node scripts/ensure-shebang.js",
		"dev": "tsx src/index.ts",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"prepare": "husky",
		"prepack": "npm run build",
		"release:homebrew-metadata": "node scripts/homebrew-metadata.js --formula",
		"smoke:packaged": "node scripts/smoke-packaged-cli.js",
		"test": "vitest run",
		"type-check": "tsc -p tsconfig.json --noEmit"
	},
	"lint-staged": {
		"*.{ts,tsx,js,mjs,cjs,json,yml,yaml,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"ink": "^4.4.1",
		"react": "^18.2.0",
		"yaml": "^2.4.5",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/node": "^20.14.10",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3",
		"vitest": "^4.0.18"
	}
}
